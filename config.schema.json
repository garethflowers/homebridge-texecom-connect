{
	"pluginAlias": "TexecomConnect",
	"pluginType": "platform",
	"schema": {
		"properties": {
			"host": {
				"default": "localhost",
				"format": "hostname",
				"minLength": 1,
				"placeholder": "e.g. localhost, 192.168.1.1",
				"required": true,
				"title": "IP Address / Hostname",
				"type": "string"
			},
			"port": {
				"default": 10001,
				"maximum": 65535,
				"placeholder": "e.g. 10001",
				"required": true,
				"title": "IP Port",
				"type": "integer"
			},
			"areas": {
				"expandable": true,
				"items": {
					"properties": {
						"accessory": {
							"oneOf": [
								{
									"enum": ["security"],
									"title": "Alarm"
								}
							],
							"required": true,
							"title": "Type",
							"type": "string"
						},
						"name": {
							"minLength": 1,
							"placeholder": "e.g. House",
							"required": true,
							"title": "Name",
							"type": "string"
						},
						"number": {
							"minimum": 1,
							"placeholder": "e.g. 1, 2, 3",
							"required": true,
							"title": "Number",
							"type": "number"
						},
						"userCode": {
							"default": "",
							"format": "password",
							"maxLength": 6,
							"minLength": 4,
							"pattern": "^[0-9]{4,6}$",
							"placeholder": "e.g. 1234",
							"required": false,
							"title": "User Code",
							"type": "string"
						}
					},
					"type": "object"
				},
				"required": true,
				"title": "Areas",
				"type": "array",
				"uniqueItems": true
			},
			"zones": {
				"expandable": true,
				"items": {
					"properties": {
						"accessory": {
							"oneOf": [
								{
									"enum": ["motion"],
									"title": "Motion Sensor"
								},
								{
									"enum": ["contact"],
									"title": "Contact Sensor"
								},
								{
									"enum": ["smoke"],
									"title": "Smoke"
								},
								{
									"enum": ["carbon-monoxide"],
									"title": "Carbon Monoxide"
								}
							],
							"required": true,
							"title": "Sensor Type",
							"type": "string"
						},
						"name": {
							"minLength": 1,
							"placeholder": "e.g. Living Room, Bedroom, Kitchen",
							"required": true,
							"title": "Name",
							"type": "string"
						},
						"number": {
							"minimum": 1,
							"placeholder": "e.g. 1, 2, 3",
							"required": true,
							"title": "Number",
							"type": "number"
						}
					},
					"type": "object"
				},
				"required": true,
				"title": "Zones",
				"type": "array",
				"uniqueItems": true
			}
		},
		"type": "object"
	},
	"singular": true
}
